<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <TextView
        android:id="@+id/textView"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="115dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="WELCOME!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="115dp"
        android:backgroundTint="#c2255c"
        android:fontFamily="@font/poppinsregular"
        android:text="Logout"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppinsregular"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnChatList"
        style="@android:style/Widget.Button"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="144dp"
        android:autoText="false"
        android:backgroundTint="#9775fa"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/font_poppins"
        android:text="Chats"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnUsers"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUsers"
        style="@android:style/Widget.Button"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#22b8cf"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/font_poppins"
        android:text="Users"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>